        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="Remove" Height="300" Width="300">
    
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="147*"/>
            <RowDefinition Height="82*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="remove_textbox" Height="23" Margin="37,50,0,0" Grid.Row="1"   Width="222"/>
        <Button Content="Remove"  Grid.Row="2"  Width="75" Click="Remove_Click"/>

    </Grid>
</Window>
